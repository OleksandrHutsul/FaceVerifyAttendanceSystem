@model FaceVerifyAttendanceSystem.BL.Models.LessonDTO

@{
    ViewData["Title"] = "Create Course";
}

<h2>Create Course</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NameCourse" class="control-label"></label>
        <input asp-for="NameCourse" class="form-control" />
        <span asp-validation-for="NameCourse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WordsCode" class="control-label"></label>
        <input asp-for="WordsCode" class="form-control" />
        <span asp-validation-for="WordsCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescriptionCourse" class="control-label"></label>
        <textarea asp-for="DescriptionCourse" class="form-control"></textarea>
        <span asp-validation-for="DescriptionCourse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartCourse" class="control-label"></label>
        <input asp-for="StartCourse" class="form-control" />
        <span asp-validation-for="StartCourse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndCourse" class="control-label"></label>
        <input asp-for="EndCourse" class="form-control" />
        <span asp-validation-for="EndCourse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
